  </parent>

  <groupId>org.nuxeo.cm</groupId>
  <artifactId>nuxeo-case-management-parent</artifactId>
  <version>1.8.2-HF08</version>
  <name>Nuxeo Case Management Framework</name>
  <packaging>pom</packaging>
  <description>
    The parent module for Nuxeo Case Management Framework
  </description>

  <properties>
    <nuxeo.cm.version>1.8.2-HF08</nuxeo.cm.version>
    <nuxeo.routing.version>5.4.3-I20110902_0115</nuxeo.routing.version>

  </properties>

  <profiles>
    <profile>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <id>server</id>
      <modules>
        <module>nuxeo-case-management-distribution</module>
      </modules>
    </profile>
    <profile>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <id>tomcat</id>
      <modules>
        <module>nuxeo-case-management-distribution</module>
      </modules>
    </profile>
    <profile>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <id>serverCorr</id>
      <modules>
        <module>nuxeo-case-management-distribution</module>
      </modules>
    </profile>
    <profile>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <id>tomcatCorr</id>
      <modules>
        <module>nuxeo-case-management-distribution</module>
      </modules>
    </profile>
    <profile>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <id>funkloadLoadTest</id>
      <modules>
        <module>nuxeo-case-management-distribution</module>
      </modules>
    </profile>
  </profiles>


  <modules>
    <module>nuxeo-case-management-api</module>
    <module>nuxeo-case-management-test</module>
    <module>nuxeo-case-management-core</module>
    <module>nuxeo-case-management-lang</module>
    <module>nuxeo-case-management-facade</module>
    <module>nuxeo-case-management-web</module>
    <module>nuxeo-correspondence-api</module>
    <module>nuxeo-correspondence-core</module>
    <module>nuxeo-correspondence-web</module>
  </modules>

